{
  "singleQuote": true,
  "jsxSingleQuote": true,
  "singleAttributePerLine": true,
  "trailingComma": "es5",

  "tabWidth": 2,
  "useTabs": true,
  "semi": false,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",

  "plugins": ["prettier-plugin-svelte"],
  "svelteIndentScriptAndStyle": false
}
